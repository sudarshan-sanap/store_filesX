<PasswordResetScreen>:
    name: 'password_reset'
    MDLabel:
        text: 'Password Reset'
        halign: 'center'
        font_style: 'H4'
        pos_hint: {'center_y': 0.9}
    MDLabel:
        text: 'Please enter your correct email id and new password'
        halign: 'center'
        font_style: 'Body1'
        pos_hint: {'center_y': 0.8}
    MDTextField:
        id: email
        hint_text: 'Enter your email'
        pos_hint: {'center_x': 0.5, 'center_y': 0.7}
        size_hint_x: None
        width: 300
    MDTextField:
        id: new_password
        hint_text: 'Enter new password'
        password: True
        pos_hint: {'center_x': 0.5, 'center_y': 0.6}
        size_hint_x: None
        width: 300
    MDRaisedButton:
        text: 'Submit'
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        on_release:
            root.reset_password(email.text, new_password.text)
    MDLabel:
        id: reset_message
        text: ''
        halign: 'center'
        color: 1, 0, 0, 1
        pos_hint: {'center_y': 0.45}
    MDRaisedButton:
        text: 'Back to Login'
        pos_hint: {'center_x': 0.5, 'center_y': 0.35}
        on_release:
            root.back_to_login()
